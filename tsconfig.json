{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",

    "jsx": "react-jsx",

    "lib": ["dom", "dom.iterable", "es2020"],

    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
